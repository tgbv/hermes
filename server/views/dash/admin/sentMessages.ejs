<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./global/head') %>
    <%- include('./dash/head') %>
    
    <title>Hermes - Sent messages</title>

    <style>
        table {
            border: 1px solid lightgrey;
        }

        td {
            border: 1px solid lightgrey;
        }
    </style>
</head>
<body>
    <%- include('./dash/header') %>
    <%- include('./dash/sidenav') %>
<main>
    <div class="row">
        <div class="col s12">
            <p class="flow-text">Sent messages</p>
            
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>User</th>
                        <th>Sender</th>
                        <th>Receipt</th>
                        <th>Text</th>
                        <th>Created At</th>
                    </tr>
                </thead>


            <% SentMessages.forEach((U, i)=>{ %>

                <tbody >
                    <tr>
                        <td><%- U.id %></td>
                        <td><%- U.user ? U.user.username : "" %></td>
                        <td><%- U.sender %></td>
                        <td><%- U.receipt %></td>
                        <td><%- U.text %></td>
                        <td><%- U.created_at.toLocaleString()  %></td>
                    </tr>
                </tbody>

            <% }) %>
            </table>

            <br>
            <a class="btn waves-effect green"
                href="/dash/admin/sent-messages?page=<%- page-1 %>"
                <%- page < 2 ? "disabled" : "" %>  ><<</a>
            <a class="btn waves-effect green"
                href="/dash/admin/sent-messages?page=<%- page+1 %>"
                <%- MessagesCount <= page*nr ? "disabled" : "" %> >>></a>
            <br>
        </div>
    </div>

</main>
<%- include('./footer') %>

<script>
    <%- include('./global/util') %>
    <%- include('./global/errors') %>

</script>

</body>
</html>
