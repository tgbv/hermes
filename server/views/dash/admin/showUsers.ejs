<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./global/head') %>
    <%- include('./dash/head') %>
    
    <title>Hermes - Registered Accounts</title>

    <style>
        table {
            border: 1px solid lightgrey;
        }

        td {
            border: 1px solid lightgrey;
        }
    </style>
</head>
<body>
    <%- include('./dash/header') %>
    <%- include('./dash/sidenav') %>
<main>
    <div class="row">
        <div class="col s12">
            <p class="flow-text">Registered Accounts</p>
            
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Suspended</th>
                        <th>Created at</th>
                        <th>Actions</th>
                    </tr>
                </thead>


            <% Users.forEach((U, i)=>{ %>

                <tbody class="<%- U.suspended ? 'red-text' : ''  %>">
                    <tr>
                        <td><%- U.id %></td>
                        <td><%- U.username %></td>
                        <td><%- U.suspended ? "true" : "false" %></td>
                        <td><%- U.created_at.toLocaleString()  %></td>
                        <td>
                            <a href="/dash/admin/users/<%- U.id %>/ban-swap" class="btn orange waves-effect"><%- U.suspended ? "Unban" : "Ban" %></a>
                        </td>
                    </tr>
                </tbody>

            <% }) %>
            </table>

            <br>
            <a class="btn waves-effect green"
                href="/dash/admin/users?page=<%- page-1 %>"
                <%- page < 2 ? "disabled" : "" %>  ><<</a>
            <a class="btn waves-effect green"
                href="/dash/admin/users?page=<%- page+1 %>"
                <%- UsersCount <= page*nr ? "disabled" : "" %> >>></a>
            <br>
        </div>
    </div>

</main>
<%- include('./footer') %>

<script>
    <%- include('./global/util') %>
    <%- include('./global/errors') %>

</script>

</body>
</html>
